@model TransactionRawContainerForProduct
@{
    var title = "كارت صنف لمستلزمات منتج";
    ViewData["Title"] = title;
}

<div id="app" class="container mx-auto px-4 py-6">
    <!-- Search Form Card -->
    <div class="flex justify-between items-center mb-8 mt-4">
        <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="stroke-[#212b36]" viewBox="0 0 24 24"
                fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
                <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                <path d="M12 11h4"></path>
                <path d="M12 16h4"></path>
                <path d="M8 11h.01"></path>
                <path d="M8 16h.01"></path>
            </svg>
            <h1 class="text-2xl text-[#212b36] font-bold">{{ title }}</h1>
        </div>
        <a href="@((Context.Request.Headers["Referer"].ToString() != string.Empty) ? Context.Request.Headers["Referer"].ToString() : Url.Action("Index", "Sales", new { area = "Sales" }))"
            class="bg-[#212b36] hover:bg-[#222] text-white px-4 py-2 rounded-lg inline-flex items-center gap-2 transition-colors">
            رجوع
            <i class="fa fa-arrow-left"></i>
        </a>
    </div>


    <div class="bg-white rounded-lg shadow-md mb-6 overflow-hidden">
        <div class="p-6">
            <form asp-controller="Reports" asp-action="ItemRawForProduct" method="post" class="space-y-4">
                <div class="grid grid-cols-1 gap-4">
                    <div>
                        @Html.Editor("StoreItemId","StoreItemsList",new
                        {
                            htmlAttributes = new
                            {
                                @name = "StoreItemId",
                                @id = "StoreItemId",
                                @class = "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                            }
                        })
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">تاريخ البداية</label>
                            <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   value="@Model.Search.StartDate" name="StartDate" id="StartDate" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">تاريخ النهاية</label>
                            <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                   value="@Model.Search.EndDate" name="EndDate" id="EndDate" />
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit"
                            class="bg-emerald-800 hover:bg-emerald-700 text-white px-6 py-2 rounded-lg w-full md:w-1/4 mx-auto transition-colors">
                            تحميل كارت الصنف لمستلزمات المنتج
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Card -->
    <div v-if="storeItemRawTransactions.length > 0" class="bg-white rounded-lg shadow-md mb-6 overflow-hidden">
        <div class="bg-primary text-white px-6 py-4 flex items-center gap-2">
            <i class="fas fa-list-ol"></i>
            <h2 class="text-lg font-semibold">تفاصيل المواد المستخدمة لتجميع المنتج</h2>
        </div>
        <div class="p-6">
            <div v-for="(item, index) in storeItemRawTransactions" :key="index" class="mb-6 last:mb-0">
                <div class="bg-gray-50 rounded-lg p-4">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-100">
                                <tr>
                                    <th class="px-4 py-3 text-right w-1/12">#</th>
                                    <th class="px-4 py-3 text-right w-4/12">العنصر</th>
                                    <th class="px-4 py-3 text-right w-2/12">التاريخ</th>
                                    <th class="px-4 py-3 text-right w-2/12">الكمية قبل</th>
                                    <th class="px-4 py-3 text-right w-2/12">الكمية المستخدمة</th>
                                    <th class="px-4 py-3 text-right w-2/12">الكمية بعد</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <tr v-for="(transaction, tIndex) in item.StoreItemRawTransactions" :key="tIndex">
                                    <td class="px-4 py-3 whitespace-nowrap">{{ transaction.StoreItemId }}</td>
                                    <td class="px-4 py-3">{{ transaction.StoreItemRawName }}</td>
                                    <td class="px-4 py-3 whitespace-nowrap">{{ transaction.TransDate }}</td>
                                    <td class="px-4 py-3 whitespace-nowrap">{{ formatNumber(transaction.AmountBalanceAfter) }}</td>
                                    <td class="px-4 py-3 whitespace-nowrap">{{ formatNumber(transaction.QTY) }}</td>
                                    <td class="px-4 py-3 whitespace-nowrap">{{ formatNumber(transaction.QtyAfter) }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/3.3.4/vue.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        // Initialize Select2
        $(document).ready(function() {
            $("#StoreItemsSelect2").select2();
        });

        const { createApp } = Vue;

        createApp({
            data() {
                return {
                    title: "كارت صنف لمستلزمات منتج",
                    storeItemRawTransactions: @Html.Raw(JsonConvert.SerializeObject(Model.StoreItemRawTransactions)) || [],
                    search: {
                        storeItemId: @Model.Search.StoreItemId,
                        startDate: "@Model.Search.StartDate",
                        endDate: "@Model.Search.EndDate"
                    }
                }
            },
            methods: {
                formatNumber(value) {
                    if (value === null || value === undefined || value === '') {
                        return '0';
                    }
                    return parseFloat(value).toLocaleString('ar-EG');
                }
            }
        }).mount('#app');
    </script>
}