@model List<StoreMeasureUnitVM>
@{
    var title = "قائمة وحدات القياس";
    ViewData["Title"] = title;
    string data = JsonConvert.SerializeObject(Model);
}
@section PageHeading{
    <partial name="_PageTitle" model="@title" />

}
<card title=@title addational-class="fa-list-ol"
      text-color-class="text-white" header-class="bg-primary">
    <table class="table table-striped table-bordered table-hover dataTable">
        <thead>
            <tr>
                <th>اسم الوحدة</th>
                <th>الكود</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach:items">
            <tr>
                <td><span data-bind="text:MeasureUnitName"></span></td>
                <td><span data-bind="text:ECode"></span></td>
                <td><a data-bind="attr:{href:'/Store/StoreMeasureUnit/ManageRecord/'+Id() }" class="btn btn-primary">تعديل</a></td>
            </tr>
        </tbody>
    </table>
    <card-footer>
        <a data-bind="attr:{href:'/Store/StoreMeasureUnit/ManageRecord/0'}" class="btn btn-primary">اضافة وحدة</a>
    </card-footer>
</card>







@section Scripts {
    <script src="~/lib/knockout/knockout-3.5.0.js"></script>
    <script src="~/lib/knockout.mapping/knockout.mapping.js"></script>
    <script src="~/APP/General/GeneralTableViewModel.js" asp-append-version="true"></script>

    <script type="text/javascript">
        var client = new GeneralTable(@Html.Raw(data));
        ko.applyBindings(client);
    </script>


}

