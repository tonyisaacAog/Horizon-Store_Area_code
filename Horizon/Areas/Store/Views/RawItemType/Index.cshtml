@model List<RawItemTypeVM>
@{
    var title = "قائمة انواع المواد الخام";
    ViewData["Title"] = title;
    string data = JsonConvert.SerializeObject(Model);
}

<div id="app" class="container mx-auto px-4 py-6">
    <!-- Card Header -->
    <div class="flex justify-between items-center mb-8 mt-4">
        <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none"
                stroke="#000000" stroke-width="2" class="stroke-[#212b36]" stroke-linecap="round"
                stroke-linejoin="round">
                <path d="M15 10v11l-5 -3l-5 3v-11a3 3 0 0 1 3 -3h4a3 3 0 0 1 3 3z" />
                <path d="M11 3h5a3 3 0 0 1 3 3v11" />
            </svg>
            <h1 class="text-2xl text-[#212b36] font-bold">{{ title }}</h1>
        </div>
        <a href="/Store/RawItemType/ManageRecord/0"
            class="bg-[#212b36] hover:bg-[#222] text-white px-4 py-2 rounded-lg inline-flex items-center gap-2 transition-colors">
            <i class="fa fa-plus"></i>
            اضافة نوع
        </a>
    </div>

    <!-- Card Body -->
    <data-table :columns="columns" :data="rawItemTypes" :searchable="true" :sortable="true" :paginated="true"
        :per-page-options="[5, 10, 25, 50]" :default-per-page="10" search-placeholder="البحث في أنواع المواد الخام..."
        no-data-message="لا توجد بيانات" @@row-action="handleRowAction" @@row-click="handleRowClick"
        @@search-change="handleSearchChange" @@sort-change="handleSortChange" @@page-change="handlePageChange"
        ref="rawItemTypesTable">
    </data-table>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/3.3.4/vue.global.min.js"></script>
    <!-- Import the separated component -->
    <script type="module">
        import { DataTable } from '/assets/components/DataTable.js?v=2.6';

        const { createApp } = Vue;

        createApp({
            components: {
                DataTable
            },
            data() {
                return {
                    title: 'قائمة انواع المواد الخام',
                    rawItemTypes: @Html.Raw(data),
                    totalRawItemTypes: 0,
                    searchResults: 0,
                    currentPage: 1,
                    columns: [
                        {
                            key: 'RawItemTypeName',
                            label: 'اسم النوع',
                            sortable: true,
                            searchable: true,
                            width: 'w-3/4'
                        },
                        {
                            key: 'actions',
                            label: 'الإجراءات',
                            type: 'actions',
                            width: 'w-1/4',
                            actions: [
                                {
                                    key: 'edit',
                                    label: 'تعديل',
                                    icon: 'fa-edit',
                                    class: 'bg-blue-600 hover:bg-blue-700 text-white',
                                    condition: (item) => item.Id !== 1
                                }
                            ]
                        }
                    ]
                }
            },
            mounted() {
                this.totalRawItemTypes = this.rawItemTypes.length;
                this.searchResults = this.rawItemTypes.length;
            },
            methods: {
                handleRowAction(event) {
                    const { action, item } = event;

                    switch (action) {
                        case 'edit':
                            window.location.href = `/Store/RawItemType/ManageRecord/${item.Id}`;
                            break;
                    }
                },

                handleRowClick(item) {
                    console.log('Row clicked:', item);
                },

                handleSearchChange(event) {
                    this.searchResults = event.results;
                },

                handleSortChange(event) {
                    console.log('Sort changed:', event);
                },

                handlePageChange(event) {
                    this.currentPage = event.page;
                }
            }
        }).mount('#app');
    </script>
}