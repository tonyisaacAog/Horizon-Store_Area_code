@model SupplierVM
@{
    string data = JsonConvert.SerializeObject(Model);
}

<div id="app" class="container mx-auto px-4 py-6">
    <!-- Card Container -->
    <div>
        <!-- Card Header -->
        <div class="flex justify-between items-center mb-8 mt-4">
            <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none"
                    stroke="#000000" stroke-width="2" class="stroke-[#212b36]" stroke-linecap="round"
                    stroke-linejoin="round">
                    <path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" />
                    <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                    <path d="M21 21v-2a4 4 0 0 0 -3 -3.85" />
                </svg>

                <h1 class="text-2xl text-[#212b36] font-bold">{{ supplier.Id !== 0 ? "تعديل بيانات المورد"
                    : "اضافة مورد جديد" }}</h1>
            </div>
            <a href="@((Context.Request.Headers["Referer"].ToString() != string.Empty) ? Context.Request.Headers["Referer"].ToString() : Url.Action("Index", "Supplier", new { area = "Purchases" }))"
                class="bg-[#212b36] hover:bg-[#222] text-white px-4 py-2 rounded-lg inline-flex items-center gap-2 transition-colors">
                رجوع
                <i class="fa fa-arrow-left"></i>
            </a>
        </div>

        <!-- Card Body -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <!-- First Row -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">اسم المورد</label>
                    <input v-model="supplier.SupplierName"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        :class="{'border-red-500': errors.SupplierName}">
                    <span v-if="errors.SupplierName" class="text-red-500 text-xs">{{ errors.SupplierName }}</span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">اسم المورد - عربي</label>
                    <input v-model="supplier.SupplierNameAr"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        :class="{'border-red-500': errors.SupplierNameAr}">
                    <span v-if="errors.SupplierNameAr" class="text-red-500 text-xs">{{ errors.SupplierNameAr }}</span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">البريد الالكتروني</label>
                    <input v-model="supplier.Email" type="email"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        :class="{'border-red-500': errors.Email}">
                    <span v-if="errors.Email" class="text-red-500 text-xs">{{ errors.Email }}</span>
                </div>
            </div>

            <!-- Second Row -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">تليفون 1</label>
                    <input v-model="supplier.Phone1"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        :class="{'border-red-500': errors.Phone1}">
                    <span v-if="errors.Phone1" class="text-red-500 text-xs">{{ errors.Phone1 }}</span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">تليفون 2</label>
                    <input v-model="supplier.Phone2"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        :class="{'border-red-500': errors.Phone2}">
                    <span v-if="errors.Phone2" class="text-red-500 text-xs">{{ errors.Phone2 }}</span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">تليفون 3</label>
                    <input v-model="supplier.Phone3"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                        :class="{'border-red-500': errors.Phone3}">
                    <span v-if="errors.Phone3" class="text-red-500 text-xs">{{ errors.Phone3 }}</span>
                </div>
            </div>

            <!-- Card Footer -->
            <div class="flex justify-end pt-4 border-t border-gray-200">
                <button v-on:click="saveSupplier" :disabled="isLoading"
                    class="bg-emerald-800 hover:bg-blue-dark text-white px-6 py-2 rounded-md flex items-center gap-2 transition-colors disabled:opacity-50">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd" />
                    </svg>
                    <span v-if="isLoading">جاري الحفظ...</span>
                    <span v-else>حفظ</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Messages Modal -->
    <div v-if="showMessageModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div class="p-4 border-b border-gray-200 flex justify-between items-center">
                <h3 class="text-lg font-medium text-gray-900">رسائل</h3>
                <button v-on:click="showMessageModal = false" class="text-gray-500 hover:text-gray-700">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="p-4">
                <ul class="space-y-2">
                    <li v-for="(message, index) in messages" :key="index" class="text-red-600 text-sm">{{ message }}
                    </li>
                </ul>
            </div>
            <div class="p-4 border-t border-gray-200 flex justify-end">
                <button v-on:click="showMessageModal = false"
                    class="px-4 py-2 bg-primary text-white rounded-md hover:bg-primary-dark">
                    موافق
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@3.2.47/dist/vue.global.min.js"></script>
    <script type="text/javascript">
        // Initialize supplier data from server
        var supplierData = @Html.Raw(data);

        const { createApp } = Vue;

        createApp({
            data() {
                return {
                    supplier: supplierData,
                    errors: {
                        SupplierName: '',
                        SupplierNameAr: '',
                        Email: '',
                        Phone1: '',
                        Phone2: '',
                        Phone3: ''
                    },
                    messages: [],
                    showMessageModal: false,
                    isLoading: false
                };
            },
            methods: {
                validateForm() {
                    let isValid = true;
                    this.messages = [];

                    // Reset errors
                    Object.keys(this.errors).forEach(key => this.errors[key] = '');

                    // Supplier Name validation
                    if (!this.supplier.SupplierName || this.supplier.SupplierName.trim() === '') {
                        this.errors.SupplierName = 'اسم المورد مطلوب';
                        this.messages.push('اسم المورد مطلوب');
                        isValid = false;
                    }

                    // Supplier Name Arabic validation
                    if (!this.supplier.SupplierNameAr || this.supplier.SupplierNameAr.trim() === '') {
                        this.errors.SupplierNameAr = 'اسم المورد - عربي مطلوب';
                        this.messages.push('اسم المورد - عربي مطلوب');
                        isValid = false;
                    }

                    // Phone1 validation
                    if (!this.supplier.Phone1 || this.supplier.Phone1.trim() === '') {
                        this.errors.Phone1 = 'تليفون 1 مطلوب';
                        this.messages.push('تليفون 1 مطلوب');
                        isValid = false;
                    } else if (!/^\d+$/.test(this.supplier.Phone1)) {
                        this.errors.Phone1 = 'يجب أن يحتوي على أرقام فقط';
                        this.messages.push('تليفون 1 يجب أن يحتوي على أرقام فقط');
                        isValid = false;
                    }

                    // Phone2 validation (optional)
                    if (this.supplier.Phone2 && !/^\d+$/.test(this.supplier.Phone2)) {
                        this.errors.Phone2 = 'يجب أن يحتوي على أرقام فقط';
                        this.messages.push('تليفون 2 يجب أن يحتوي على أرقام فقط');
                        isValid = false;
                    }

                    // Phone3 validation (optional)
                    if (this.supplier.Phone3 && !/^\d+$/.test(this.supplier.Phone3)) {
                        this.errors.Phone3 = 'يجب أن يحتوي على أرقام فقط';
                        this.messages.push('تليفون 3 يجب أن يحتوي على أرقام فقط');
                        isValid = false;
                    }

                    // Email validation (optional)
                    if (this.supplier.Email && !/^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(this.supplier.Email)) {
                        this.errors.Email = 'بريد إلكتروني غير صحيح';
                        this.messages.push('البريد الإلكتروني غير صحيح');
                        isValid = false;
                    }

                    if (!isValid) {
                        this.showMessageModal = true;
                    }

                    return isValid;
                },

                async saveSupplier() {
                    if (!this.validateForm()) {
                        return;
                    }

                    this.isLoading = true;

                    try {
                        const response = await fetch('/Purchases/Supplier/SaveRecord', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(this.supplier)
                        });

                        const result = await response.json();

                        if (result && (result.success || result.newLocation)) {
                            // Handle success - redirect or show success message
                            if (result.newLocation) {
                                window.location.href = result.newLocation;
                            } else {
                                this.showMessage("تم حفظ بيانات المورد بنجاح", "success");
                                // Optionally redirect to a listing page
                                setTimeout(() => {
                                    window.location.href = '/Purchases/Supplier/Index';
                                }, 1500);
                            }
                        } else {
                            // Handle error
                            this.messages = [result.errors && result.errors.length > 0 ? result.errors[0] : 'حدث خطأ أثناء الحفظ'];
                            this.showMessageModal = true;
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        this.messages = ['حدث خطأ في الاتصال بالخادم'];
                        this.showMessageModal = true;
                    } finally {
                        this.isLoading = false;
                    }
                }
            }
        }).mount('#app');
    </script>
}