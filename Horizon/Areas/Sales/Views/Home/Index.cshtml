@model List<SaleVM>
@{
    var title = "اذون استلام المنتجات";
    ViewData["Title"] = title;
    string data = JsonConvert.SerializeObject(Model);
}

<div id="app" class="container mx-auto px-4 py-6">
    <!-- Card Header -->
    <div class="flex justify-between items-center mb-8 mt-4">
        <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none"
                stroke="#000000" stroke-width="2" class="stroke-[#212b36]" stroke-linecap="round"
                stroke-linejoin="round">
                <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                <path d="M9 12l2 2l4 -4" />
            </svg>
            <h1 class="text-2xl text-[#212b36] font-bold">{{ title }}</h1>
        </div>
        <a href="/Sales/Home/Create"
            class="bg-[#212b36] hover:bg-[#222] text-white px-4 py-2 rounded-lg inline-flex items-center gap-2 transition-colors">
            <i class="fa fa-plus"></i>
            اضافة جديد
        </a>
    </div>

    <!-- Card Body -->
    <data-table :columns="columns" :data="sales" :searchable="true" :sortable="true" :paginated="true"
        :per-page-options="[5, 10, 25, 50]" :default-per-page="10" search-placeholder="البحث في إذون الاستلام..."
        no-data-message="لا توجد بيانات" @@row-action="handleRowAction" @@row-click="handleRowClick"
        @@search-change="handleSearchChange" @@sort-change="handleSortChange" @@page-change="handlePageChange"
        ref="salesTable">
    </data-table>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/3.3.4/vue.global.min.js"></script>
    <!-- Import the separated component -->
    <script type="module">
        import { DataTable } from '/assets/components/DataTable.js?v=2.6';

        const { createApp } = Vue;

        createApp({
            components: {
                DataTable
            },
            data() {
                return {
                    title: 'اذون استلام المنتجات',
                    sales: @Html.Raw(data),
                    totalSales: 0,
                    searchResults: 0,
                    currentPage: 1,
                    columns: [
                        {
                            key: 'InvoiceNum',
                            label: 'رقم الفاتورة',
                            sortable: true,
                            searchable: true
                        },
                        {
                            key: 'SalesDate',
                            label: 'التاريخ',
                            sortable: true
                        },
                        {
                            key: 'TotalAmount',
                            label: 'السعر الإجمالي',
                            sortable: true,
                            format: (value) => {
                                if (value === null || value === undefined || value === '') return '0';
                                return parseFloat(value).toLocaleString('ar-EG');
                            }
                        },
                        {
                            key: 'ClientName',
                            label: 'العميل',
                            sortable: true,
                            searchable: true
                        },
                        {
                            key: 'actions',
                            label: 'الإجراءات',
                            type: 'actions',
                            width: 'w-1/4',
                            actions: [
                                {
                                    key: 'details',
                                    label: 'تفاصيل إذن الاستلام',
                                    icon: 'fa-info-circle',
                                    class: 'bg-blue-600 hover:bg-blue-700 text-white'
                                },
                                {
                                    key: 'print',
                                    label: 'طباعة إذن الاستلام',
                                    icon: 'fa-print',
                                    class: 'bg-gray-600 hover:bg-gray-700 text-white ml-2'
                                }
                            ]
                        }
                    ]
                }
            },
            mounted() {
                this.totalSales = this.sales.length;
                this.searchResults = this.sales.length;
            },
            methods: {
                handleRowAction(event) {
                    const { action, item } = event;

                    switch (action) {
                        case 'details':
                            window.location.href = `/Sales/Home/DetailsSales/${item.Id}`;
                            break;
                        case 'print':
                            window.location.href = `/Sales/Home/PrintSalesInvoice/${item.Id}`;
                            break;
                    }
                },

                handleRowClick(item) {
                    console.log('Row clicked:', item);
                },

                handleSearchChange(event) {
                    this.searchResults = event.results;
                },

                handleSortChange(event) {
                    console.log('Sort changed:', event);
                },

                handlePageChange(event) {
                    this.currentPage = event.page;
                }
            }
        }).mount('#app');
    </script>
}